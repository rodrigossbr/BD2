<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:include schemaLocation="Posicao.xsd"/>
    <xs:element name="Jogador">
   		<xs:complexType>
        	<xs:sequence>
            	<xs:element name="id" type="xs:integer"/>
                <xs:element name="nome" type="xs:string"/>
				<xs:element name="posicoes" maxOccurs="unbounded">
   					<xs:complexType>
						<xs:sequence>
							<xs:element name="idPosicao" type="xs:integer" maxOccurs="unbounded"/>
						</xs:sequence>        			
	    			</xs:complexType>
	            </xs:element>
            </xs:sequence>
        </xs:complexType>
        <xs:key name="jogadorKey">
            <xs:selector xpath="Jogador"/>
            <xs:field xpath="id"/>
        </xs:key>
     </xs:element>
</xs:schema>